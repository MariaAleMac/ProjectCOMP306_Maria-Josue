@model VeterinaryDirectoryWebApp.Models.DoctorViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<!-- Doctor information table -->
<div style="display: flex;">
    <div style="flex: 1;">
        <!-- Doctor picture -->
        

        <img src="~/images/cartoon-veterinarian.jpg" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" />
    </div>
    <div style="flex: 3; padding-left: 20px;">
        <!-- Doctor's introduction -->
        <h3>Hello, my name is @Model.Name @Model.Lastname, DVM, MSc</h3>
        <p>Rate: 5 / 5 based on  reviews</p>
    </div>
</div>

<!-- Doctor details table -->
<div style="margin-top: 20px;">
    <h4>Personal Information</h4>
    <table class="table">
        <tbody>
            <tr>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Designation</th>
                <th>Veterinarian, DVM, MSc</th>
            </tr>
            <tr>
                <td>About Veterinarian</td>
                <td>@Html.DisplayFor(model => model.About)</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>

            <tr>
                <td>Location</td>
                <td>@Html.DisplayFor(model => model.Location)</td>
            </tr>

            <tr>
                <td>Areas of interest</td>
                <td>@Html.DisplayFor(model => model.SpecialtyDesc)</td>
            </tr>

            <tr>
                <td>Schedule</td>
                <td>@Html.DisplayFor(model => model.Schedule)</td>
            </tr>

        </tbody>
    </table>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
